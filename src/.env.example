# IMAP Server Configuration
IMAP_HOST=imap.gmail.com
IMAP_USERNAME=your.email@gmail.com
IMAP_PASSWORD=your-app-specific-password
# IMPORTANT: For Gmail, create an App Password:
# 1. Go to your Google Account > Security > 2-Step Verification
# 2. At the bottom, find "App passwords"
# 3. Create a new app password for "Mail" and "Other/Custom"
# 4. Use the generated 16-character password WITHOUT spaces

# Gemini API Configuration
# Get this from https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key

# Google Cloud Storage (for database sync)
GCP_PROJECT=your-gcp-project-id
GCS_BUCKET=your-storage-bucket-name

# Server Configuration
MCP_SERVER_NAME=IMAP Analytics Server
MCP_SERVER_PORT=4000
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Analytics Configuration
# Number of messages to analyze in one batch
ANALYTICS_BATCH_SIZE=50
# Cache duration in minutes
ANALYTICS_CACHE_DURATION=60
# Enable/disable features
ENABLE_THREAD_ANALYSIS=true
ENABLE_CONTENT_ANALYSIS=true
ENABLE_PRIORITY_SCORING=true
