{
  "servers": {
    "imap-mcp": {
      "type": "stdio",
      "command": "python",
      "args": ["src/server.py"],
      "inputs": {
        "imap": {
          "title": "IMAP Configuration",
          "type": "object",
          "properties": {
            "host": {
              "type": "string",
              "default": "imap.gmail.com",
              "description": "IMAP server host"
            },
            "username": {
              "type": "string",
              "description": "Your email address"
            },
            "password": {
              "type": "string",
              "description": "Your Gmail App Password (16 characters)",
              "format": "password"
            }
          },
          "required": ["username", "password"]
        },
        "gemini": {
          "title": "Gemini API Configuration",
          "type": "object",
          "properties": {
            "apiKey": {
              "type": "string",
              "description": "Your Gemini API key",
              "format": "password"
            }
          },
          "required": ["apiKey"]
        },
        "analytics": {
          "title": "Analytics Configuration",
          "type": "object",
          "properties": {
            "batchSize": {
              "type": "integer",
              "default": 50,
              "description": "Number of messages to analyze in one batch"
            },
            "cacheDuration": {
              "type": "integer",
              "default": 60,
              "description": "Cache duration in minutes"
            },
            "enableThreadAnalysis": {
              "type": "boolean",
              "default": true,
              "description": "Enable thread analysis features"
            },
            "enablePriorityScoring": {
              "type": "boolean",
              "default": true,
              "description": "Enable message priority scoring"
            }
          }
        }
      }
    }
  }
}
